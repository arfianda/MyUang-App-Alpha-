<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_secondary"
        android:contentDescription="Close"/>

    <TextView
        android:id="@+id/tv_payment_method_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="#448AFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_close">

        <TextView
            android:id="@+id/btn_income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="INCOME"
            android:textColor="@color/white"
            android:background="#448AFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_expense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EXPENSE"
            android:textColor="#448AFF"
            android:background="#E3F2FD"
            android:textStyle="bold"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:backgroundTint="#448AFF"
        android:paddingHorizontal="24dp"
        android:paddingVertical="6dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_container" />

    <TextView
        android:id="@+id/tv_currency_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp"
        android:textColor="@color/text_secondary"
        android:textSize="40sp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_category" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/text_secondary"
        android:textSize="56sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_currency_symbol"
        app:layout_constraintTop_toBottomOf="@id/tv_category" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Description"
        android:background="@null"
        android:padding="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_amount" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_description"/>

    <TextView
        android:id="@+id/tv_insert_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2962FF"
        android:text="Insert Type"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_description"/>

    <GridLayout
        android:id="@+id/keypad_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toBottomOf="@id/tv_insert_type"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView style="@style/KeypadButton" android:text="1" android:onClick="onKeypadClick"/>
        <TextView style="@style/KeypadButton" android:text="2" android:onClick="onKeypadClick"/>
        <TextView style="@style/KeypadButton" android:text="3" android:onClick="onKeypadClick"/>

        <TextView style="@style/KeypadButton" android:text="4" android:onClick="onKeypadClick"/>
        <TextView style="@style/KeypadButton" android:text="5" android:onClick="onKeypadClick"/>
        <TextView style="@style/KeypadButton" android:text="6" android:onClick="onKeypadClick"/>

        <TextView style="@style/KeypadButton" android:text="7" android:onClick="onKeypadClick"/>
        <TextView style="@style/KeypadButton" android:text="8" android:onClick="onKeypadClick"/>
        <TextView style="@style/KeypadButton" android:text="9" android:onClick="onKeypadClick"/>

        <TextView style="@style/KeypadButton" android:text="." android:onClick="onKeypadClick"/>
        <TextView style="@style/KeypadButton" android:text="0" android:onClick="onKeypadClick"/>
        <ImageView
            android:id="@+id/btn_backspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="24dp"
            android:src="@drawable/ic_more_horizontal" 
            android:layout_gravity="fill"
            android:scaleType="centerInside"
            android:contentDescription="Backspace"
            android:onClick="onKeypadClick"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>