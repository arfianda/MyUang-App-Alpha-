<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/detecting_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/sansation_bold"
        android:text="Detecting location"
        android:textColor="#263238"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_underline"
        android:layout_width="251dp"
        android:layout_height="10dp"
        android:background="#082DB1"
        app:layout_constraintStart_toStartOf="@+id/detecting_location_title"
        app:layout_constraintTop_toBottomOf="@+id/detecting_location_title" />

    <TextView
        android:id="@+id/detecting_location_subtitle"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/sansation_light"
        android:text="We will detect your location to choose the best language for you"
        android:textColor="#263238"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/detecting_location_title"
        app:layout_constraintTop_toBottomOf="@+id/title_underline" />

    <FrameLayout
        android:id="@+id/flag_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/detecting_location_subtitle">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flags_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <ImageView
            android:id="@+id/final_flag_view"
            android:layout_width="307dp"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:src="@drawable/indonesia_flag"
            tools:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sansation_bold"
        android:textColor="#263238"
        android:textSize="28sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flag_container"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/location_detected_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sansation_light"
        android:gravity="center"
        android:textColor="#263238"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_text"
        tools:text="Lokasi mu terdeteksi di Indonesia. Bahasa yang akan digunakan adalah bahasa Indonesia!"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>